{
  "AWSEBDockerrunVersion": 2,
  "authentication": {
    "bucket": "flocloud-config",
    "key": "docker/.dockercfg"
  },
  "volumes": [
    {
      "name": "telegraf-config",
      "host": {
        "sourcePath": "/etc/telegraf"
      }
    },
    {
      "name": "host-proc",
      "host": {
        "sourcePath": "/proc"
      }
    },
    {
      "name": "host-sys",
      "host": {
        "sourcePath": "/sys"
      }
    },
    {
      "name": "docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "flo-device-service",
      "image": "registry.gitlab.com/flotechnologies/flo-public-gateway:latest",
      "essential": true,
      "memoryReservation": 256,
      "ulimits": [
        {
          "softLimit": 65536,
          "hardLimit": 65536,
          "name": "nofile"
        }
      ],
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        },
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "telegraf",
      "image": "telegraf:1.9.2",
      "memory": 256,
      "essential": false,
      "mountPoints": [
        {
          "sourceVolume": "telegraf-config",
          "containerPath": "/etc/telegraf",
          "readOnly": true
        },
        {
          "sourceVolume": "host-proc",
          "containerPath": "/host/proc",
          "readOnly": true
        },
        {
          "sourceVolume": "host-sys",
          "containerPath": "/host/sys",
          "readOnly": true
        },
        {
          "sourceVolume": "docker-sock",
          "containerPath": "/var/run/docker.sock"
        }
      ],
      "environment": [
        {
          "name": "HOST_PROC",
          "value": "/host/proc"
        },
        {
          "name": "HOST_SYS",
          "value": "/host/sys"
        }
      ]
    }
  ]
}
